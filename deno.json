{
  "tasks": {
    "fmt": "deno fmt . && prettier --write '**/*.{html,css}' && deno run -A utils/formatStd.js",
    "lint": "deno lint && stylelint site/static/css/* notebook/*.css",
    "build-site": "deno run -A --watch=src,std,site/build-scripts,site/pages site/build-scripts/build.js",
    "serve": "serve --config site/serve.json",
    "compile": "deno compile --allow-all ptls.js -o dist/ptls",
    "ptls": "deno run -A ptls.js"
  },

  "imports": {
    "@prettier/sync": "npm:@prettier/sync@^0.6.1",
    "command-line-args": "npm:command-line-args@^6.0.1",
    "csv-parse": "npm:csv-parse@^5.6.0",
    "gray-matter": "npm:gray-matter@^4.0.3",
    "immutable": "./immutable/immutable.js",
    "marked": "npm:marked@^15.0.0",
    "marked-highlight": "npm:marked-highlight@^2.2.1",
    "open": "npm:open@^10.2.0",
    "prettier": "npm:prettier@^3.4.2",
    "serve": "npm:serve@^14.2.4",
    "stylelint": "npm:stylelint@^16.23.0",
    "stylelint-config-standard": "npm:stylelint-config-standard@^39.0.0",
    "ws": "npm:ws@^8.18.3"
  },

  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "font-family-name-quotes": null,
      "no-descending-specificity": null
    }
  }
}

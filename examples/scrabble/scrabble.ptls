points = import "json:points.json"

text = import "text:alice.txt"

fn wordInfo(word)
  score = word
    | chars
    $ points[arg]
    | sum

  { letter: take(word, 1), word, score }
end

text
  | split(" ")
  | list.unique
  $ wordInfo
  | table.of
  | table.group("letter")
  $ table.top("score", 1)
  | table.merge
  | sortBy("letter")
  | print

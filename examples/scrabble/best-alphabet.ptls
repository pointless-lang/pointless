points = import "json:points.json"
text = import "text:alice.txt"

fn wordInfo(word)
  score = word
    | chars
    $ points[arg]
    | sum

  { letter: chars(word)[0], word, score }
end

text
  | split(" ")
  | List.unique
  $ wordInfo
  | Table.of
  | Table.group("letter")
  $ top("score", 1)
  | Table.merge
  | sortBy("letter")
  | print

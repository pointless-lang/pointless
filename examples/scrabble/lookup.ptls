points = import "json:points.json"
words = import "lines:words.txt"

fn wordInfo(word)
  score = word
    | chars
    $ points[arg]
    | sum

  { word, score }
end

letters = "pointlesslanguage"

words
  ? List.hasAll(chars(letters), chars(arg))
  $ wordInfo
  | Table.of
  | Table.top("score", 5)
  | print

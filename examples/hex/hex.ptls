hexDigits = chars("0123456789abcdef")

fn parse(string)
  assert(len(string) > 0)

  digits = string
    | str.toLower
    | reverse
    | chars

  result = 0

  for digit in digits do
    result *= 16
    result += list.indexOf(hexDigits, digit)
  end

  result
end

fn toHex(n)
  assert(n >= 0)
  assert(math.isInt(n))

  result = ""

  while n > 0 or result == "" do
    result += hexDigits[n % 16]
    n = math.floor(n / 16)
  end

  reverse(result)
end

{ parse, toHex }
